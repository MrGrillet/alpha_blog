
<h2><%= @article.title %></h2>
<p><%= simple_format(@article.description) %></p>

<%= link_to 'Edit this article', edit_article_path(@article) %> | <%= link_to 'Back to articles', articles_path %> | <%= link_to 'Delete this article', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } %>

<% if @article.user %>
	<ul class="listing">
		<div class="col-md-4 col-md-offset-4 well">
			<li></li>
			<li><%= link_to gravatar_for(@article.user), user_path(@article.user) %> </li>
			<li class="article-title">This article is by: <%= link_to @article.user.username, user_path(@article.user) %></li>
					
		</div>		
	</ul>
<% end %>