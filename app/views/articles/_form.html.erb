<%= render 'share/errors', obj: @article %>

<div class="row">
	<div class='col-xs-12'>
		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"})  do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<label > <%= f.label :title %></label>
				</div>
				<div class="col-sm-10">
					<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<label><%= f.label :description %></label>
				</div>
					<div class="col-sm-10">
						<%= f.text_area :description, class: "form-control", placeholder: "Body of the article", rows: 10, autofocus: true  %>
					</div>
				</div>
			</div>
			<div class="form-group" >
				<div class="col-sm-8 col-sm-offset-2">
					<%= f.submit class: 'btn btn-lg btn-primary' %>
				</div>
			</div>
			<div class="form-group" >
				<div class="col-sm-8 col-sm-offset-2">
					<br>
					<%= link_to "Cancel and return to articles", articles_path %>
				</div>
			</div>
		<% end %>

	</div>	

</div>
